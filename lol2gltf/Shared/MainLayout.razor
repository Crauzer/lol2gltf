@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode Theme="Theme"/>
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudImage ObjectFit="ObjectFit.ScaleDown" Height="50" Src="images/lol2gltf_icon_256.png" Alt="lol2gltf logo" Style="border-radius: 8px"/>
        <MudText Typo="Typo.h5" Class="ml-3">LOL2GLTF</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Edge="Edge.End" Href="https://github.com/Crauzer/lol2gltf" Target="_blank"/>
    </MudAppBar>
    <MudDrawer Open ClipMode="DrawerClipMode.Docked" Elevation="2">
        <NavMenu/>
    </MudDrawer>
    <MudMainContent>
        <MudContainer Class="my-12">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        this._drawerOpen = !this._drawerOpen;
    }

    MudTheme Theme = new() 
    {
        Palette = new Palette() 
        { 
            Primary = Colors.Green.Default,
            AppbarBackground = Colors.Green.Darken1 
        },
        PaletteDark = new PaletteDark() 
        {
            Primary = Colors.Green.Default,
            AppbarBackground = Colors.Green.Darken1
        },
        LayoutProperties = new LayoutProperties() 
        {
            DefaultBorderRadius = "8px"
        },
    };
}
